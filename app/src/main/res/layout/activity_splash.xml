<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/top_background1"
    tools:context=".BaseComponents.SplashActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/white_background">

            <TextView
                android:id="@+id/welcometext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_to_dekut_medic_app"
                android:textAlignment="center"
                android:textColor="#6672FF"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/welcome_role"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose User Role"
                android:textAlignment="center"
                android:textColor="#6672FF"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                />

            <Button
                android:id="@+id/btnroledoctor"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background"
                android:text="Doctor"
                android:textAllCaps="false"
                android:textSize="38sp"
                android:textColor="#38608C"
                />

            <Button
                android:id="@+id/btnrolepatient"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background"
                android:text="Patient"
                android:textAllCaps="false"
                android:textSize="38sp"
                android:textColor="#38608C"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>